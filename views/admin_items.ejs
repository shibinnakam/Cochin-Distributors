    <!-- Adding items -->
     <!-- Form Container with Curved Box -->
    <div class="form-container">
        <h2>Add New Products</h2>
        <p></p>
        <form action="/dashboard/items/add" method="POST" enctype="multipart/form-data">
            <input name="name" placeholder="Item Name" required><br>
            <input name="rate" placeholder="Rate" required><br>
            <textarea name="description" placeholder="Description"></textarea><br>
            <input type="file" name="image"><br>
            <button type="submit">Add Item</button>
        </form>
    </div>
    <div class="items-container">
        <% items.forEach(item => { %>
        <div class="item-card">
            <% if (item.image) { %>
                <img src="/uploads/<%= item.image %>" alt="<%= item.name %>">
            <% } %>
            <h3>
                <%= item.name %> — ₹<%= item.rate %><br>
                <% if (item.active) { %>
                    <span style="color:green">(In Stock)</span>
                <% } else { %>
                    <span style="color:red">(Not Available)</span>
                <% } %>
            </h3>
            <p><%= item.description %></p>

            <div class="button-group">
                <form action="/dashboard/items/<%= item.id %>/toggle" method="POST">
                    <button type="submit">Turn <%= item.active ? "Off" : "On" %></button>
                </form>
                <form action="/dashboard/items/<%= item.id %>/delete" method="POST" onsubmit="return confirm('Delete this item?');">
                    <button type="submit">Delete</button>
                </form>
                <form action="/dashboard/items/<%= item.id %>/edit" method="GET">
                    <button type="submit">Edit</button>
                </form>
            </div>
        </div>
        <% }); %>
    </div>

