    <!-- Custom Item Styling -->
    <style>
    .items-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 40px 0;
    }

    .item-card {
        flex: 1 1 calc(25% - 40px);
        border: 1px solid #ccc;
        padding: 15px;
        margin: 10px;
        box-sizing: border-box;
        border-radius: 50px / 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.4);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        max-width: 200px;
        min-height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        overflow: hidden;
        font-family: Arial, sans-serif; /* ðŸ‘ˆ this line forces normal readable font */
    }

    .item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.3);
    }

    .item-card img {
        margin: 10px auto;
        border-radius: 10px;
        max-width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .item-card h3 {
        font-size: 18px;
        margin-bottom: 10px;
        font-family: Arial
    }
   

    .item-card p {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px;
    }

    @media (max-width: 992px) {
        .item-card {
            flex: 1 1 calc(33.333% - 40px);
        }
    }

    @media (max-width: 768px) {
        .item-card {
            flex: 1 1 calc(50% - 40px);
        }
    }

    @media (max-width: 480px) {
        .item-card {
            flex: 1 1 100%;
        }
    }
</style>

