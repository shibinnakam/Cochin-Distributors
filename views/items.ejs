<!DOCTYPE html>
<html>
<head><title>Items</title></head>
<body>
  <h1>Our Items</h1>
  <% items.forEach(item => { %>
    <div style="border:1px solid #ccc; padding:10px; margin:10px;">
      <h3><%= item.name %> — ₹<%= item.rate %></h3>
      <% if (!item.active) { %>
        <p style="color:red; font-weight:bold;">Not Available</p>
      <% } %>
      <p><%= item.description %></p>
      <% if (item.image) { %>
        <img src="/uploads/<%= item.image %>" width="200">
      <% } %>
    </div>
  <% }); %>
  <br><a href="/">Home</a>
</body>
</html>
